// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/dist/**/*.js" ],
            "preLaunchTask": "npm: watch",
            "env": {
              "DEBUG_VSCODE_JAVA":"true"
            }
        },
        ahref("https://www.google.com/url?sa=i&url=https%3A%2F%2Fin.pinterest.com%2Fpin%2F563512972121063231%2F&psig=AOvVaw2HEn8PAdYmP8R-xkS9cbZD&ust=1705382330500000&source=images&cd=vfe&opi=89978449&ved=0CBMQjRxqFwoTCIjrtvLS3oMDFQAAAAAdAAAAABAD
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
              "--extensionDevelopmentPath=${workspaceFolder}",
              "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
            ],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
            "preLaunchTask": "npm: compile"
          }
    ]
}
